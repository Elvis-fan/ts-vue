{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        "quotemark": false,
        "comment-format": [
            true,
            "check-space"
        ],
        "no-var-keyword": true,
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "no-trailing-whitespace": false
    }
}